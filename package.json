{
  "name": "uyoutodo",
  "private": false,
  "version": "1.2.1",
  "main": "electron/main.js",
  "author": "Anthony Lu <taruruchan0@gmail.com>",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "electron:serve": "concurrently -k \"yarn dev\" \"yarn electron\"",
    "electron:servemac": "concurrently -k \"yarn dev\" \"yarn electron:mac\"",
    "electron:build": "vite build && electron-builder",
    "electron:buildmac": "vite build && electron-builder --config.npmRebuild=false -c.extraMetadata.main=electron/mac/mainMac.js",
    "electron": "wait-on tcp:3000 && cross-env NODE_ENV=development electron .",
    "electron:mac": "wait-on tcp:3000 && cross-env NODE_ENV=development electron electron/mac/mainMac.js"
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "mica-electron": "^1.2.9",
    "vue": "^3.2.25",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "material-design-icons-iconfont": "^6.7.0",
    "moment": "^2.29.4",
    "sass": "^1.53.0",
    "vue-router": "^4.1.1",
    "vue3-perfect-scrollbar": "^1.6.0",
    "@vitejs/plugin-vue": "^3.0.0",
    "concurrently": "^7.2.2",
    "cross-env": "^7.0.3",
    "electron": "^22.3.0",
    "electron-builder": "^23.6.0",
    "typescript": "^4.5.4",
    "vite": "^3.0.0",
    "vue-tsc": "^0.39.5",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "cn.org.uyou.todo",
    "productName": "uyou ToDo",
    "copyright": "Copyright Â© 2022 Anthony Lu",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "./logo.icns",
      "darkModeSupport": false
    },
    "win": {
      "icon": "./logo.ico"
    },
    "linux": {
      "icon": "./logo.png",
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  }
}
